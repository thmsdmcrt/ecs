{
	"name": "entity-component-system",
	"version": "0.1.0",
	"description": "Javascript Entity Component System",
	"main": "build/main.js",
	"scripts": {
		"build:types": "tsc *.ts --target esnext --downlevelIteration --noEmit",
		"build:lint": "eslint . --ext .ts --ignore-path .gitignore",
		"build:script": "esbuild ./main.ts --bundle --minify --sourcemap --format=esm --outfile=build/main.js",
		"build": "npm run build:lint  && npm run build:types && npm run build:script",
		"test": "jest --passWithNoTests --verbose",
		"coverage": "jest --coverage"
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es2021": true
		},
		"extends": [
			"google"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": 12,
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint"
		],
		"rules": {
			"indent": ["error", "tab"],
			"no-tabs": "off"
		}
	},
	"jest": {
		"transform": {
			"^.+\\.ts?$": "ts-jest"
		},
		"testEnvironment": "node",
		"testRegex": "/.*\\.(test|spec)?\\.(ts|tsx)$",
		"moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
		"globals": {
			"ts-jest": {
				"tsconfig": {
					"downlevelIteration": true
				}
			}
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/thmsdmcrt/entity-component-system.git"
	},
	"keywords": [
		"ECS",
		"Entity-Component-System",
		"Framework"
	],
	"author": "Thomas DÃ©mocrite <thomas.democrite@pm.me>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/thmsdmcrt/entity-component-system/issues"
	},
	"homepage": "https://github.com/thmsdmcrt/entity-component-system#readme",
	"devDependencies": {
		"@types/jest": "^26.0.16",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"esbuild": "^0.8.17",
		"eslint": "^7.14.0",
		"eslint-config-google": "^0.14.0",
		"jest": "^26.6.3",
		"ts-jest": "^26.4.4",
		"typescript": "^4.1.2"
	}
}